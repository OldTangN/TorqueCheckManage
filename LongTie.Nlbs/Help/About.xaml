<Grid x:Class="LongTie.Nlbs.Help.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Height="768" Width="1024" Loaded="Grid_Loaded">
    <Grid.RowDefinitions >
        <RowDefinition Height="1"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <Border Grid.Row="2">
        <StackPanel>
            <RichTextBox  Name="richbox" IsReadOnly="True"  Height="768" FontSize="15" Padding="40,10" >
                <RichTextBox.Background>
                    <ImageBrush ImageSource="/LongTie.Nlbs;component/Images/bg_table2.png"/>
                </RichTextBox.Background>
                <!--<RichTextBox.Document >
                    <FlowDocument  Focusable="True" LineHeight="5"></FlowDocument>
                </RichTextBox.Document>-->   
            </RichTextBox>
        </StackPanel>
    </Border>
 
</Grid>
